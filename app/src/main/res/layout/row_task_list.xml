<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="20dp"
    >

    <ImageView
        android:id="@+id/rowTaskListIvComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_todo_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/rowTaskListTvDesc"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:text="Descrição"
        app:layout_constraintStart_toEndOf="@+id/rowTaskListIvComplete"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rowTaskListTvPriority"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Prioridade"
        app:layout_constraintStart_toEndOf="@+id/rowTaskListIvComplete"
        app:layout_constraintTop_toBottomOf="@id/rowTaskListTvDesc" />

    <TextView
        android:id="@+id/rowTaskListTvDuedate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:text="Date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/rowTaskListTvPriority"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#ECECEC"
        android:layout_marginTop="10dp"
        />

</android.support.constraint.ConstraintLayout>